#include<GL/glu.h>
#include <GL/glut.h>
//#include <stdlib.h>

void MyInit()
{
   glClearColor(0,1,0,1);
   glColor3f(0,0,0);
   
}

void draw()
{
  glClear(GL_COLOR_BUFFER_BIT);
  glPointSize(10);
  

 glBegin(GL_LINE_LOOP);
 glVertex2f(0,0);
 glVertex2f(-0.75,-0.75);
 glVertex2f(-0.75,-0.75);
 
 glEnd();
 glBegin(GL_LINE_LOOP);
 glVertex2f(-0.50,0.50);
 glVertex2f(0.50,0.50);
 glVertex2f(-0.50,-0.50);
 glVertex2f(-0.50,-0.50);
 
 glEnd();

 glBegin(GL_LINE_L#include<GL/glu.h>
