int main(int c, char *v[])
{
    glutInit(&c,v);
    glutInitWindowPosition(300,300);
    glutInitWindowSize(400,400);
    glutInitDisplayMode(GLUT_RGB | GLUT_SINGLE);
    glutCreateWindow("My first window");

    MyInit();

    glutDisplayFunc(draw);
    glutMainLoop();

    return 0;
